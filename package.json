{
  "name": "open-apps-sdk",
  "version": "0.1.0",
  "description": "LLM-agnostic Apps SDK for building conversational apps with custom UI components",
  "type": "module",
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "dev": "bun --hot src/index.ts",
    "build": "bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19",
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maneeshsandra/open-apps-sdk"
  },
  "license": "MIT"
}
