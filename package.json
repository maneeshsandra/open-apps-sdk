{
  "name": "open-apps-sdk",
  "version": "1.0.2",
  "description": "LLM-agnostic Apps SDK for building conversational apps with custom UI components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "author": "Maneesh Sandra",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
    "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "open-apps-sdk": "./dist/cli.js"
  },
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "dev": "bun --hot src/index.ts",
    "build": "bun bundler.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "react": "^19",
    "react-dom": "^19"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maneeshsandra/open-apps-sdk.git"
  },
  "license": "MIT",
  "keywords": [
    "llm",
    "sdk",
    "react",
    "apps-sdk",
    "mcp",
    "conversational-ai",
    "chatbot",
    "ui-components"
  ]
}
