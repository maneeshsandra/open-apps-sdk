{
  "name": "open-apps-sdk",
  "version": "0.1.0",
  "description": "LLM-agnostic Apps SDK for building conversational apps with custom UI components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./server": "./dist/server.js",
    "./client": "./dist/client.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "setup": "bun scripts/setup.ts",
    "dev": "bun --hot src/index.ts",
    "build": "bun build ./src/lib/index.ts --outdir=dist --target=node --format=esm --sourcemap && bun build ./src/lib/server.ts --outdir=dist --target=node --format=esm --sourcemap --outfile=dist/server.js && bun build ./src/lib/client.ts --outdir=dist --target=browser --format=esm --sourcemap --outfile=dist/client.js",
    "build:client": "bun build ./src/frontend.tsx --outdir=dist/client --target=browser --format=esm --sourcemap",
    "build:all": "bun run build && bun run build:client",
    "start": "NODE_ENV=production bun src/index.ts",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build:all"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19",
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maneeshsandra/open-apps-sdk"
  },
  "license": "MIT",
  "keywords": [
    "llm",
    "sdk",
    "react",
    "mcp",
    "conversational-ai",
    "chatbot",
    "ui-components"
  ]
}
